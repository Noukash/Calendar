<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView 
   		android:id="@+id/country_photo1"
   		android:layout_width="240dp"
   		android:layout_height="300dp"
		android:paddingRight="15dp"
		android:clickable="true"/>
	<TextView android:id="@+id/country_name1"
		android:textSize="14sp" 
		android:textStyle="bold"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/country_photo1"/>
	<TextView android:id="@+id/country_itemDescription1"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_below="@id/country_name1"
		android:layout_alignLeft="@id/country_name1"
		android:layout_alignRight="@id/country_name1"/>
	<ImageView android:id="@+id/country_photo2"
		android:clickable="true"
		android:layout_width="240dp"
		android:layout_height="300dp"
		android:layout_toRightOf="@id/country_photo1" />
	<TextView
		android:id="@+id/country_name2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:textStyle="bold"
		android:layout_below="@+id/country_photo2"
		android:layout_alignLeft="@+id/country_photo2"
		android:layout_alignRight="@+id/country_photo2"/>
	<TextView
		android:textSize="14sp"
		android:textStyle="bold"
		android:id="@+id/country_itemDescription2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/country_name2"
		android:layout_alignLeft="@+id/country_name2"
		android:layout_alignRight="@+id/country_name2"/>
</RelativeLayout>
