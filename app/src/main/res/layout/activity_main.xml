<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="andrey.calendar.MainActivity"
    android:background="@drawable/main_background">

    <LinearLayout
        android:id="@+id/LinearLayoutMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/when"

            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonshape"
            android:onClick="OnClickWhen"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="ЗНАЮ КОГДА"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:padding="10dp"/>


        <Button
            android:id="@+id/where"

            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:onClick="OnClickWhere"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="ЗНАЮ КУДА"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:padding="30dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/why"

        android:layout_width="600dp"
        android:layout_height="130dp"
        android:layout_below="@+id/LinearLayoutMain"
        android:onClick="OnClickWhy"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="ЗНАЮ ЗАЧЕМ"
        android:textColor="#FFFFFF"

        android:textSize="30sp" />


</RelativeLayout>
